{
    "name": "puppeteer-domkit",
    "version": "1.2.0",
    "description": "A toolkit for DOM operation with puppeteer in nodejs environment, which greatly improves test case development efficiency",
    "main": "src/index.js",
    "scripts": {
        "test": "mocha -r register.js test/index.ts --watch --watch-extensions ts,json --recursive --full-trace --timeout 10000",
        "test-dev": "mocha -r register.js test/index.ts --watch --watch-extensions ts,json --recursive --inspect --full-trace --bail --debug --async-only --timeout 10000"
    },
    "author": "stevenjc",
    "homepage": "https://github.com/to8toFE/puppeteer-domkit",
    "bugs": "https://github.com/to8toFE/puppeteer-domkit/issues",
    "keywords": [
        "puppeteer",
        "dom",
        "domkit",
        "toolkit",
        "zepto",
        "test"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/to8toFE/puppeteer-domkit.git"
    },
    "license": "MIT",
    "typings": "typings/index.d.ts",
    "dependencies": {
        "colors": "^1.3.3",
        "puppeteer": "^1.14.0",
        "puppeteer-domkit": "^1.1.20",
        "tslib": "^1.9.3",
        "typescript": "^3.0.0"
    },
    "files": [
        "src",
        "typings",
        "browser",
        "index.js"
    ],
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.11.4",
        "@types/puppeteer": "^1.12.3",
        "chai": "^4.2.0",
        "fs-extra": "^7.0.1",
        "mocha": "^5.2.0",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.0.2",
        "tsconfig-paths": "^3.8.0"
    }
}
